{
  "extends": [
    "config:base"
  ],

  "digest": {
    "enabled": false
  },

  "labels": [
    "renovate"
  ],

  "packageRules": [
      {
        "packagePatterns": ["^eslint"],
        "groupName": "eslint packages"
      },
      {
        "matchPackageNames": ["mapbox-gl"],
        "enabled": false
      },
      {
        "matchPackageNames": ["Django"],
        "allowedVersions": "<=3.2"
      },
      {
        "matchManagers": ["npm"],
        "enabled": false
      }
    ],

  "pip_requirements": {
    "fileMatch": ["^requirements/fork.txt$"]
  }
}
